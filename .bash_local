debug_rc () {
	OUTPUT=$(env | grep 'OS_')

	if [ -n "$OUTPUT" ]; then
		echo "rc sourced"
	else
		echo "rc not sourced"
	fi

	echo "JUJU_ENV: $JUJU_ENV"
	env | grep OS_
}

rc_sourced () {
	OUTPUT=$(env | grep 'OS_')

	if [ -z $OUTPUT ]; then
		return 1
	else
		return 0
	fi
}

check_cloud () {
	OUTPUT=$(env | grep 'OS_')

	if [ -n "$JUJU_ENV" -a -n "$OUTPUT" ]; then
		echo "using cloud: $JUJU_ENV"
	else
		echo "incomplete cloud setup"
	fi
}

set_cloud () {
	CLOUD=$1

	if [ "$CLOUD" = "hp" -o "$CLOUD" = "hp2" ]; then
		. ~/.hpcloud-rc
	else
		. ~/.canonistack/novarc
	fi
	. ~/.lp_creds-rc
	export JUJU_ENV=$CLOUD

	check_cloud
}

